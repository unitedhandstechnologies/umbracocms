<section class="animatedParent">
    <div class="container">
        <div class="row animatedParent">
            <div class="col-12 NoPadMar">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="sec_heading">
                                <h1>@Model?.AirLinesTitle</h1>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="airline_partners animated fadeInRightShort">
                    @foreach (var item in airlines)
                    {
                        <div class="slide">
                            <div class="thumbnail_style"><img src="@item.Logo.Url()" /></div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
