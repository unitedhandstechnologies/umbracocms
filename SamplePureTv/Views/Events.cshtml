@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Events>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";
}

<section class="NoBanner mb-3">
    <div class="container top_banner_news animatedParent">
        <div class="row">
            <div class="col-12">
                <div class="sec_heading">
                    <h1> @Model?.PageTitle </h1>
                    <p> @Model?.TitleDescription</p>
                </div>
                <div class="news_list animated fadeInUpShort">
                    <div class="news_img"><img src="@Model?.TitleImage.Url()" /></div>
                </div>
            </div>
        </div>
    </div>
</section>

<!--  -->

<section class="mb-3">
    <div class="container">
        <div class="row">

            <div class="col-12">
                <div class="event_sub"> @Model?.ImageTitle<bR>
                    <p> <span> @Model?.ImageDescription </span> </p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="event_style">
    <div class="container animatedParent">
        <div class="row animated fadeInUpShort">
            <div class="col-12">
                @foreach (var item in Model?.ListOfEvents)
                {
                    <div class="card">
                        <div class="thumb_wrp">
                            <div class="date_box"> @item.EventMonth <span> @item.EventDate </span> </div> <img
                                src="@item.Image.Url()">
                        </div>
                        <div class="content_wrp">
                            <h2> @item.Title</h2>
                            <h3> @item.Description </h3>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<script>
    function addClass(){
        document.getElementById("master-id").classList.add("black_text")
       }
       addClass()
</script>